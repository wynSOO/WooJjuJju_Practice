<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:padding="10dp"
    android:background="#d6cfcf"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <!--
            private String servId;
            private String servNm;
            private String jurMnofNm;
            private String jurOrgNm;
            private String inqNum;
            private String servDgst;
            private String servDtlLink;
            private String svcfrstRegTs;
        -->
        <TextView
            android:id="@+id/item_txt_serv_nm"
            android:textSize="15sp"
            android:textColor="#153666"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_txt_jur_mnof_nm"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_txt_serv_dgst"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_txt_serv_dtl_link"
            android:layout_marginTop="5dp"
            android:autoLink="web"
            android:textColorLink="@android:color/holo_blue_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:id="@+id/item_go_link"
        android:layout_weight="1"
        android:textSize="30sp"
        android:text=">>"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent" />

</LinearLayout>
